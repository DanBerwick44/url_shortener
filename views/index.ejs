<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <title>URL Shortener Project</title>
</head>
<body>
    <div class="container">

        <h1>URL Shrinker </h1>
        <form action="/shortUrl" method="POST" class="my-4 d-flex flex-row align-items-center flex-wrap">
            <label for="fullUrl" class="visually-hidden"> URL </label>
            <input required type="url" name="fullUrl" id="fullUrl">
            <button class="btn btn-success mx-2" type="submit"> Shrink </button>
        </form>
        
        <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th> Full URL</th>
                <th> Short URL</th>
                <th> Clicks</th>
            </tr>
        </thead>
        <tbody>
        <% shortUrls.forEach(shortUrl => { %>
            <tr> 
            <td> <a href="<%= shortUrl.full %>"> <%= shortUrl.full %>  </a></td>
            <td> <a href="<%= shortUrl.short %>"> <%= shortUrl.short %> </a></td>
            <td> <%= shortUrl.count %> </td>
        </tr>
       <% }) %>
        </tbody>
    </table>
    
</div>
</body>
</html>